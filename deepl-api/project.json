{
  "name": "deepl-api",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "deepl-api/src",
  "prefix": "ngx-deepl",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "deepl-api/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "deepl-api/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "deepl-api/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "deepl-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["deepl-api/**/*.ts", "deepl-api/**/*.html"]
      }
    }
  },
  "tags": []
}
